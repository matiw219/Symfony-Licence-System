{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Notifications{% endblock %}

{% block main %}

    <link href="{{ asset('assets/css/alerts.css') }}" rel="stylesheet">

    <style>
        badge {
            color: #212529;
        }
        @media (prefers-color-scheme: dark) {
            .badge {
                color: white;
            }
        }

    </style>

    <div>
        <div class="row">
            {% for n in notifications %}
                <div class="col-12 mb-3">
                    <div class="border p-2 rounded">
                        <div>
                            <span class="user-avatar">
                                <span class="fa-stack">
                                    <i class="user-avatar-icon-background fas fa-square fa-stack-2x"></i>
                                    <i class="user-avatar-icon-foreground fa fa-user fa-stack-1x fa-inverse"></i>
                                </span>
                                <span><b>{{ n.getSenderName }}</b> send message</span>
                            </span>
                        </div>
                        <div class="p-2">
                            {{ n.message|raw }}
                        </div>
                        <div class="p-2">
                            <small>{{ n.getAgo }}</small>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}